<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.github.gripsack.android.ui.trips.AddTripActivity"
    tools:showIn="@layout/activity_edit_trip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp">
        <!-- card_view:cardCornerRadius="4dp"
         android:layout_margin="5dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTripTitle"
                android:textSize="18sp"
                android:text="Trip Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/tvTripName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bay Area Trip"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/tvTripTitle" />

            <!--TODO:Listview will be implemented-->
            <ImageView
                android:id="@+id/type1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/type4"
                android:layout_below="@+id/tvTripName" />

            <ImageView
                android:id="@+id/type2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/type8"
                android:layout_below="@+id/tvTripName"
                android:layout_toRightOf="@+id/type1"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/type3"
                android:layout_below="@+id/tvTripName"
                android:layout_toRightOf="@+id/type2"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_margin="5dp"
            android:layout_below="@+id/card_view">
            <!-- card_view:cardCornerRadius="4dp"
             android:layout_margin="5dp">-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCollaborator"
                    android:textSize="18sp"
                    android:text="Add Collaborator"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"/>

                <!--TODO:Listview will be implemented-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/boy_image_2"
                    android:layout_below="@+id/tvCollaborator"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorAccent"
                    android:layout_margin="10dp"/>

                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@mipmap/plus"
                    android:layout_below="@+id/tvCollaborator"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="55dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>